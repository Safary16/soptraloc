# SafaryLoc - Sistema de Gestión Logística

# Variables de entorno necesarias para producción

# Django
SECRET_KEY=your-super-secret-key-change-in-production
DEBUG=False
DJANGO_SETTINGS_MODULE=config.settings_production

# Railway/Producción
RAILWAY_ENVIRONMENT=production
RAILWAY_PUBLIC_DOMAIN=safary-soptraloc.up.railway.app

# Base de datos (Railway la configura automáticamente)
DATABASE_URL=postgresql://user:password@host:port/database

# Configuración de archivos estáticos
STATIC_ROOT=staticfiles
MEDIA_ROOT=media

# Configuración de seguridad
ALLOWED_HOSTS=*
CSRF_TRUSTED_ORIGINS=https://safary-soptraloc.up.railway.app,https://*.up.railway.app