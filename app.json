{
  "name": "SOPTRALOC - Sistema de Gestión Logística",
  "description": "Sistema de optimización para transporte de contenedores",
  "image": "heroku/python",
  "repository": "https://github.com/Safary16/soptraloc",
  "keywords": ["python", "django", "logistics", "containers", "optimization"],
  "addons": [
    {
      "plan": "heroku-postgresql:mini"
    },
    {
      "plan": "heroku-redis:mini"
    }
  ],
  "env": {
    "SECRET_KEY": {
      "generator": "secret"
    },
    "DEBUG": {
      "value": "False"
    },
    "DJANGO_SETTINGS_MODULE": {
      "value": "config.settings"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "eco"
    },
    "worker": {
      "quantity": 1,
      "size": "eco"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "stack": "heroku-22"
}